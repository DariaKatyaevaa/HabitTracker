<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/HomeFragment">

    <fragment
        android:id="@+id/HomeFragment"
        android:name="com.example.habittrackerapp.ui.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_HomeFragment_to_CreateHabitFragment"
            app:destination="@id/CreateHabitFragment" />
    </fragment>
    <fragment
        android:id="@+id/CreateHabitFragment"
        android:name="com.example.habittrackerapp.ui.habitCreate.CreateHabitFragment"
        android:label="Create habit"
        tools:layout="@layout/fragment_create_habit">

        <action
            android:id="@+id/action_CreateHabitFragment_to_HomeFragment"
            app:destination="@id/HomeFragment" />
    </fragment>
    <fragment
        android:id="@+id/AboutAppFragment"
        android:name="com.example.habittrackerapp.ui.AboutAppFragment"
        android:label="About app"
        tools:layout="@layout/fragment_about_app">

    </fragment>
</navigation>