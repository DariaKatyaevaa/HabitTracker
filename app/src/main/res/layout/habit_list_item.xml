<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    android:background="@drawable/text_field_background"
    android:orientation="horizontal">

    <View
        android:id="@+id/habitItemColor"
        android:layout_width="5dp"
        android:layout_height="match_parent"
        android:layout_marginVertical="2dp"
        android:layout_marginStart="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/habitItemName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Habit name"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/habitItemDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:text="description description" />

        <TextView
            android:id="@+id/habitItemInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="priority: Low type: Good count: 3 period: 2 Day" />
    </LinearLayout>


</LinearLayout>